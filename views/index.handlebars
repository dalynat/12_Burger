<h1>Eat da Burger!</h1>

  <div class="container">
    <div class="row">
      <div class="column">
        <h4>Ready to Eat</h4>
        {{#each burgers}}
          {{#unless devoured}}
            {{>burger-block devoured =false}}
          {{/unless}}
        {{/each}}
    </div>

    <div class="column">
      <h4>Devoured</h4>
        {{#each burgers}}
          {{#if devoured}}
            {{>burger-block devoured= true}}
          {{/if}}
        {{/each}}
    </div>
  </div>
</div>


<div class="row">
  <div class ="column">
    <h2>Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <input type="text" id="burg" name="burger_name">
      </div>
      <button type="submit">Add Burger</button>
    </form> 
  </div>
</div>
